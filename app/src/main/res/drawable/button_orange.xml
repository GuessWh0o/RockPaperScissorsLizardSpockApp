<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:state_pressed="true">
        <shape>
            <solid
                android:color="@color/orangeLight">
            </solid>
            <stroke
                android:width="6dp"
                android:color="@color/yellow">
            </stroke>
            <corners
                android:radius="80dp">
            </corners>
            <padding
                android:bottom="20dp"
                android:left="20dp"
                android:right="20dp"
                android:top="20dp">
            </padding>
        </shape>
    </item>

    <item>
        <shape>
            <solid
                android:color="@color/orangeDark">
            </solid>
            <stroke
                android:width="6dp"
                android:color="@color/orangeLight">
            </stroke>
            <corners
                android:radius="80dp">
            </corners>
            <padding
                android:bottom="20dp"
                android:left="20dp"
                android:right="20dp"
                android:top="20dp">
            </padding>
        </shape>
    </item>
</selector>