<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:state_pressed="true">
        <shape>
            <solid
                android:color="@color/yellow_light">
            </solid>
            <stroke
                android:width="6dp"
                android:color="@color/white">
            </stroke>
            <corners
                android:radius="8dp">
            </corners>
            <padding
                android:bottom="5dp"
                android:left="10dp"
                android:right="10dp"
                android:top="5dp">
            </padding>
        </shape>
    </item>

