<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:state_pressed="true">
        <shape>
            <solid
                android:color="@color/colorGreen">
            </solid>
            <stroke
                android:width="2dp"
                android:color="#2f6699">
            </stroke>
            <corners
                android:radius="20dp">
            </corners>
            <padding
                android:bottom="20dp"
                android:left="20dp"
                android:right="20dp"
                android:top="20dp">
            </padding>
        </shape>
    </item>

    <item>
        <shape>
            <solid
                android:color="@color/colorAccent">
            </solid>
            <stroke
                android:width="2dp"
                android:color="#2f6699">
            </stroke>
            <corners
                android:radius="20dp">
            </corners>
            <padding
                android:bottom="20dp"
                android:left="20dp"
                android:right="20dp"
                android:top="20dp">
            </padding>
        </shape>
    </item>
</selector>